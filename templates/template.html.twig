{% extends 'base.html.twig' %}

{% block title %}les pays du monde{% endblock %}

{% block body %}

    {% block entete_haut %}
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
        <a class="navbar-brand" href="{{ path("accueil") }}">les pays du monde</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
    {% endblock %}

    {% block menu %}
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="/">les pays du monde</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">

                    <ul class="navbar-nav ml-auto"> {% for itemmenu in sections %}
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="{{ path("detail_section",{"id":itemmenu.getIdthesections}) }}">{{ itemmenu.getLetitre }}</a>
                        </li> {% endfor %}
                    </ul>

                </div>
            </div>
        </nav>
    {% endblock %}

    {% block entete_bas %}
        </div>
        </div>
        </nav>
    {% endblock %}

    {% block content %}
        <!-- Page Content -->
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="mt-5">{% block titre %}les pays du monde{% endblock %}</h1>
                    <p class="lead">{% block stitre %}un sous-titre{% endblock %}</p>
                    <div class="col-sm-9 col-md-offset-2 col-md-12 text-left">
                        {% block contenu %}Le texte de la page{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        <div><hr><footer class="blockquote-footer">Create by <cite title="Source Title">© Pitz Michaël</cite> - 2018</footer>
            <p><a href="https://github.com/pierstoval/livingedge" target="_blank">Derniers changement Symfony</a></p></div>
    {% endblock %}

{% endblock %}